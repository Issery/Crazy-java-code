public class PersonTest
{
    public static void main(String[] args)
    {
        Person p;
        p = new Person();
        //定义p变量的同时并为p变量赋值 Person p = new Person();
        p.name = "李刚";
        p.say("Java其实很简单！");
        System.out.println(p.name);
        Person p2 =p;
        p.name = "刚刚";   //修改堆里的值同样映射到引用，使其输出的属性随堆内存发生变化
        System.out.println(p2.name);
    }
}
